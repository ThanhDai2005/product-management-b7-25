extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row 
      .col-12 
        +box-head("Danh sách phòng")

    .row.mb-3 
      .col-12 
        a(href="/rooms-chat/create" class="mr-1 btn btn-sm btn-success") Tạo phòng chat 

    .row
      each room in listRoomChat 
        .col-6 
          div(class="box-room")
            div(class="inner-avatar")
              img(src="https://i.pinimg.com/564x/24/21/85/242185eaef43192fc3f9646932fe3b46.jpg", alt=room.title)
            div(class="inner-info")
              div(class="inner-name") #{room.title}
              div(class="inner-buttons")
                a(href=`/chat/${room.id}` class="mr-1 btn btn-sm btn-primary") Nhắn tin  