mixin table-tree(items, level = 1)
  each item, index in items
    - const prefix = Array(level + 1).join("-- ") 
    tr
      td 
        input(type="checkbox" name="id" value=item.id)
      td #{item.index}
      td 
        img(src=item.thumbnail height="auto" alt=item.title) 
      td #{prefix}#{item.title}
      td 
        input(type="number" value=item.position style="width: 60px" min="1" name="position")
      td
        if(role.permissions.includes("products-category_edit")) 
          a(href="javascript:;" data-status=item.status data-id=item.id button-change-status class=`badge ${item.status == "active" ? " badge-success" : "badge-danger"}`) #{item.status == "active" ? "Hoạt động" : "Dừng Hoạt động"} 
      td 
        a(href=`${prefixAdmin}/product-category/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
        if(role.permissions.includes("products-category_edit"))
          a(href=`${prefixAdmin}/product-category/edit/${item.id}` class="btn btn-warning btn-sm") Sửa
        if(role.permissions.includes("products-category_delete")) 
          button(class="ml-1 btn btn-danger btn-sm" data-id=item.id
          button-delete) Xóa 
      if(item.children && item.children.length > 0)
        +table-tree(item.children, level + 1)