extends ../../layouts/default.pug

block main
  if(role.permissions.includes("accounts_view"))
    h1 Danh sách tài khoản
                        
    .card.mb-3
      .card-header Danh sách 
        .card-body 
          .row 
            .col-8
            .col-4
              if(role.permissions.includes("accounts_create")) 
                a(href=`${prefixAdmin}/accounts/create` class="btn btn-outline-success") + Thêm mới 

          table(class="table table-hover table-sm" checkbox-multi) 
            thead 
              tr
                th STT
                th Avatar
                th Họ tên
                th Phân quyền 
                th Email
                th Trạng thái 
                th Hành động 

              tbody
                each item, index in records 
                  tr
                    td #{index + 1}
                    td 
                      img(src=item.avatar height="auto" alt=item.fullName) 
                    td #{item.fullName}
                    td #{item.role.title}
                    td #{item.email}
                    td
                      if(role.permissions.includes("accounts_edit")) 
                        a(href="javascript:;" data-status=item.status data-id=item.id button-change-status class=`badge ${item.status == "active" ? " badge-success" : "badge-danger"}`) #{item.status == "active" ? "Hoạt động" : "Dừng Hoạt động"} 
                    td 
                      a(href=`${prefixAdmin}/accounts/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết                
                      if(role.permissions.includes("accounts_edit"))    
                        a(href=`${prefixAdmin}/accounts/edit/${item.id}` class="btn btn-warning btn-sm") Sửa 
                      if(role.permissions.includes("accounts_delete"))  
                        button(class="ml-1 btn btn-danger btn-sm" data-id=item.id
                        button-delete) Xóa
        


        